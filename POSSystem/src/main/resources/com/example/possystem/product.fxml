<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.possystem.controller.ProductController"
            prefWidth="900" prefHeight="600" style="-fx-background-color: #f4f4f4;">

    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 25;">
            <Label text="INVENTORY &amp; PRODUCT MANAGEMENT" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Search by product name..." prefWidth="350" style="-fx-padding: 10; -fx-background-radius: 5;"/>
                <Button text="SEARCH" onAction="#search" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 25; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <StackPane style="-fx-padding: 20;">
            <TableView fx:id="tableView" style="-fx-background-radius: 5; -fx-border-color: #dcdde1;">
                <columns>
                    <TableColumn fx:id="imageCol" text="Image" prefWidth="80"/>
                    <TableColumn fx:id="nameCol" text="Product Name" prefWidth="200"/>
                    <TableColumn fx:id="priceCol" text="Price ($)" prefWidth="100"/>
                    <TableColumn fx:id="stockCol" text="In Stock" prefWidth="100"/>
                    <TableColumn fx:id="statusCol" text="Status" prefWidth="120"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
        </StackPane>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 15 25; -fx-background-color: white; -fx-border-color: #dcdde1; -fx-border-width: 1 0 0 0;">
            <Button text="BACK" onAction="#goBack" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 10 25;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="DELETE" onAction="#deleteProduct" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 25;"/>
            <Button text="MODIFY" onAction="#editProduct" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 10 25;"/>
            <Button text="ADD PRODUCT" onAction="#addProduct" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 35;"/>
        </HBox>
    </bottom>
</BorderPane>