<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.possystem.controller.SaleController"
            prefWidth="900" prefHeight="600" style="-fx-background-color: #f4f4f4;">

    <top>
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #2c3e50; -fx-padding: 25;">
            <Label text="PROCESS NEW SALE" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Scan or select items to build the customer's cart" style="-fx-font-size: 12px; -fx-text-fill: #bdc3c7;"/>
        </VBox>
    </top>

    <left>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #dcdde1; -fx-border-width: 0 1 0 0;" prefWidth="320">
            <Label text="Product Catalog" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
            <ListView fx:id="productListView" VBox.vgrow="ALWAYS" style="-fx-background-radius: 5;"/>
            <Separator/>
            <VBox spacing="8">
                <Label text="Set Quantity:"/>
                <TextField fx:id="quantityField" promptText="Enter number..." style="-fx-padding: 10;"/>
                <Button text="ADD TO CART" onAction="#addToCart" maxWidth="Infinity"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12; -fx-cursor: hand;"/>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label text="Current Shopping Cart" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TableView fx:id="cartTable" VBox.vgrow="ALWAYS" style="-fx-background-radius: 5;">
                <columns>
                    <TableColumn fx:id="cartNameCol" text="Product" prefWidth="180"/>
                    <TableColumn fx:id="cartPriceCol" text="Price" prefWidth="100"/>
                    <TableColumn fx:id="cartQtyCol" text="Qty" prefWidth="80"/>
                    <TableColumn fx:id="cartSubCol" text="Subtotal" prefWidth="120"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER_RIGHT" style="-fx-padding: 20 30; -fx-background-color: white; -fx-border-color: #dcdde1; -fx-border-width: 1 0 0 0;">
            <VBox alignment="CENTER_LEFT">
                <Label text="TOTAL PAYABLE" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                <Label fx:id="totalLabel" text="0.00" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="BACK" onAction="#goBack" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 12 25; -fx-font-weight: bold;"/>
            <Button text="REMOVE" onAction="#removeItem" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 12 25; -fx-font-weight: bold;"/>
            <Button text="COMPLETE SALE" onAction="#submit" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 40; -fx-cursor: hand;"/>
        </HBox>
    </bottom>
</BorderPane>