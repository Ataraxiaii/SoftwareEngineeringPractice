<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.possystem.controller.PaymentController"
            prefWidth="500" prefHeight="650" style="-fx-background-color: #f4f4f4;">
    <top>
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #2c3e50; -fx-padding: 30;">
            <Label text="PAYMENT SETTLEMENT" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>
    </top>
    <center>
        <VBox spacing="20" style="-fx-padding: 40; -fx-background-color: white;">
            <VBox alignment="CENTER" style="-fx-background-color: #fffde7; -fx-padding: 20; -fx-border-color: #fbc02d; -fx-border-radius: 5;">
                <Label text="Payable Total:" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                <Label fx:id="totalLabel" text="Total: $0.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
            </VBox>
            <VBox spacing="12">
                <Label text="Customer Name:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="nameField" promptText="Enter customer name" style="-fx-padding: 12;"/>
                <Label text="Phone Number:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="phoneField" promptText="Enter contact number" style="-fx-padding: 12;"/>
                <Label text="Paid Amount:" style="-fx-font-weight: bold; -fx-text-fill: #2980b9;"/>
                <TextField fx:id="payField" promptText="0.00" style="-fx-padding: 12; -fx-font-size: 18px;"/>
            </VBox>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 25; -fx-background-color: #ecf0f1;">
            <Button text="CANCEL" onAction="#cancel" prefWidth="150" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 12;"/>
            <Button text="COMPLETE PAYMENT" onAction="#complete" prefWidth="220" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12;"/>
        </HBox>
    </bottom>
</BorderPane>