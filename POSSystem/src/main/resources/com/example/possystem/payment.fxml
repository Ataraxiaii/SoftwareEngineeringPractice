<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.possystem.controller.PaymentController"
      style="-fx-padding: 20;">

    <Label text="Payment" style="-fx-font-size: 20px;"/>

    <Label fx:id="totalLabel" text="Total: $0.0"/>

    <TextField fx:id="nameField" promptText="Customer Name"/>
    <TextField fx:id="phoneField" promptText="Phone Number"/>
    <TextField fx:id="payField" promptText="Paid Amount"/>

    <HBox spacing="10">
        <Button text="COMPLETE PAYMENT" onAction="#complete"/>
        <Button text="CANCEL" onAction="#cancel"/>
    </HBox>

</VBox>
