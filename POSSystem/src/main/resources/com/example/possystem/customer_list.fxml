<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.possystem.controller.CustomerListController"
            style="-fx-background-color: #f4f4f4;"
            prefWidth="900" prefHeight="600">

    <top>
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #2c3e50; -fx-padding: 25;">
            <Label text="CUSTOMER TRANSACTION HISTORY"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white; -fx-letter-spacing: 2px;"/>
            <Label text="View and manage all shopping and return records"
                   style="-fx-font-size: 12px; -fx-text-fill: #bdc3c7;"/>
        </VBox>
    </top>

    <center>
        <StackPane style="-fx-padding: 20;">
            <TableView fx:id="customerTable" style="-fx-background-radius: 5; -fx-border-color: #dcdde1;">
                <columns>
                    <TableColumn fx:id="nameCol" text="Customer Name" prefWidth="130"/>
                    <TableColumn fx:id="phoneCol" text="Phone / Reference" prefWidth="140"/>
                    <TableColumn fx:id="itemsCol" text="Purchased Items" prefWidth="240"/>
                    <TableColumn fx:id="totalCol" text="Amount" prefWidth="90" style="-fx-alignment: CENTER-RIGHT;"/>
                    <TableColumn fx:id="typeCol" text="Type" prefWidth="90" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="timeCol" text="Transaction Time" prefWidth="170"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
        </StackPane>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER_RIGHT"
              style="-fx-padding: 15 25; -fx-background-color: white; -fx-border-color: #dcdde1; -fx-border-width: 1 0 0 0;">
            <Button text="BACK" onAction="#goBack"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30; -fx-cursor: hand;"/>
            <Button text="DELETE RECORD" onAction="#deleteRecord"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30; -fx-cursor: hand;"/>
        </HBox>
    </bottom>
</BorderPane>